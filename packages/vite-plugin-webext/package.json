{
  "name": "vite-plugin-webext-test",
  "version": "0.0.2",
  "private": false,
  "description": "A vite plugin for generating cross browser platform, ES module based web extensions",
  "repository": {
    "type": "git",
    "url": "https://github.com/graygalaxy/vite-webext",
    "directory": "packages/vite-plugin-webext"
  },
  "license": "MIT",
  "author": "Avirup Ghosh (https://github.com/graygalaxy)",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "client"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest --run",
    "clean": "rimraf -g client dist"
  },
  "dependencies": {
    "etag": "1",
    "fs-extra": "11",
    "magic-string": "^0.30",
    "vite": "^4.5.0"
  },
  "devDependencies": {
    "@types/chrome": "latest",
    "@types/etag": "1",
    "@types/fs-extra": "11",
    "@types/node": "20",
    "rimraf": "5",
    "rollup": "3",
    "tsup": "latest",
    "typescript": "latest",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "latest"
  },
  "peerDependencies": {
    "vite": ">=4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./client/index.d.ts",
      "import": "./client/index.mjs",
      "require": "./client/index.mjs"
    }
  },
  "keywords": [
    "vite-plugin",
    "web-extension",
    "chrome-extension",
    "extension",
    "addon",
    "browser",
    "chrome",
    "firefox",
    "edge"
  ]
}
